<div class="content-wrapper" style="min-height: 926px;">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>     
      <small><%=@user.fullname%></small>
    </h1>
    <ol class="breadcrumb">
      <li>
	    <%= link_to "#" do  %>
	      <i class="fa fa-dashboard"></i><%=t ".home"%>
	    <% end %>  
      </li>  
      <li><%= link_to (t ".users"), "#"%></li>
      <li class="active"><%=@user.fullname%></li>
    </ol>
  </section>
  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-1">
      </div>
      <div class="col-xs-10">
        <div class="col-xs-6">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title"><%=t ".user_info"%></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
              <table class="table table-striped">
                <tbody>
                  <tr>
                    <td><%= t".name"%>: <%=@user.fullname%></td>                   
                  </tr>
                  <tr>
                    <td><%= t".email"%>: <%=@user.email%></td>                     
                  </tr>
                  <tr>
                    <td>
                        <%= t".order"%>: <%=@user.orders.length%> orders
                    </td>                     
                  </tr>
                  <tr>
                    <td>
                        <%= t".comment"%>: <%=@user.comments.length%> comments
                    </td>                     
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title"><%=t ".shipping_address"%></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
              <table class="table table-striped">
                <tbody>
                  <tr>
                    <td><%=t ".recipient's_name"%>: <%=@user.fullname %></td>                   
                  </tr>
                  <tr>
                    <td><%= t".phone_number"%>: <%=@user.phone %></td>                     
                  </tr>
                  <tr>
                    <td><%= t".address"%>: <%= @user.address %></td>                     
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>


      	
        <div class="col-xs-12">
        	<%if @type != "comment"%>
		        <div class="box">
		          <div class="box-header">
		            <h3 class="box-title"><%= t".all_orders"%></h3>
		            <div class="box-tools">            
		            </div>
		          </div>
		          <!-- /.box-header -->
		          <div class="box-body table-responsive no-padding">
		            <table class="table table-hover">
		              <tbody>
		                <tr class = "title-table">
		                  <td> <%= t".order_id"%></td>
		                  <td> <%= t".items"%> </td>
		                  <td> <%= t".create_at"%> </td>
		                  <td> <%= t".total_price"%> </td>
		                  <td> <%= t".order_status"%> </td>
		                  <td> <%= t".view"%> </td>
		                </tr>  
		             
		              	<%@orders.each do |order|%>
		              		<% order_details = order.order_details %>
		              		<% order_items = order_details.pluck(:quality).reduce{|sum, x| sum + x} %>
			                <tr class = "title-table">
			                  <td><%= order.id %></td>
			                  <td>  
		                        <%= link_to order_items.to_s + " " + (t ".items"), admin_user_order_path(@user, order)%>
			                  </td>
			                  <td>
			                  		<%= link_to "CSV", admin_order_path(order,format: :csv)%>
			                  </td>
			                  <td><%= l(order.created_at, format: :long)%></td>
			                  <td><%=number_to_currency(order.total_price)%></td>
			                  <td>
			                  	<span class = "label <%=order.order_status%>">
			                  		<%=t ".order_status"+Order.order_statuses[order.order_status].to_s %>
			                  	</span>
			                  </td>
			                  <td>
			                  	<%= link_to admin_user_order_path(order.id) do  %>
							      <i class="fa fa-eye"></i>
							    <% end %>
							  </td>
			                </tr>
			            <%end%>
		              </tbody>
		            </table>
		            <%= will_paginate @orders, :previous_label => '<<', :next_label => '>>' %>

		          </div>	
		        </div>
	        <%end%>
      		<%if @type != "order"%>
		        <div class="box">
		          <div class="box-header">
		            <h3 class="box-title"><%= t".all_comments"%></h3>
		            <div class="box-tools">            
		            </div>
		          </div>
		          <!-- /.box-header -->
		          <div class="box-body table-responsive no-padding">
		            <table class="table table-hover">
		              <tbody>
		                <tr class = "title-table">
		                  <td> <%= t".comment_id"%> </td>
		                  <td> <%= t".content"%> </td>
		                  <td> <%= t".comment_for"%> </td>
		                  <td> <%= t".action"%> </td>
		                </tr>  
		             
		              	<%@comments.each do |comment|%>
		              		<% product = Product.find(comment.product_id)%>
			                <tr class = "title-table">
			                  <td> <%= comment.id %> </td>
			                  <td class = "content"><%=comment.content%></td>
			                  <td>
			                  	<ul class="products-list product-list-in-box">
			                        <div class="index-img">
			                          <%=image_tag product.image.first if product.image.attached? %>
			                        </div>
			                        <div style="padding-left: 75px;">
			                          <a href="javascript:void(0)" class="product-title">
			                          	<%=product.name%>
			                          </a>
			                        </div>                              
			                    </ul>
			                  </td>
			                  <td class="action">
			                  	<%= link_to product_path(comment.product_id) do  %>
							      <i class="fa fa-reply"></i>
							    <% end %>
							    <%= link_to "#" do  %>
							      <i class="fas fa-stamp"></i>
							    <% end %>
			                  </td>
			                </tr>
			            <%end%>
		              </tbody>
		            </table>
		            <%= will_paginate @comments, :previous_label => '<<', :next_label => '>>'%>
		          </div>	
		        </div>
	        <%end%>
	    </div>
    </div>
  </section>
</div>