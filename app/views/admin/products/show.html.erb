<div class="content-wrapper" style="min-height: 926px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        <%= @product.name%>
        <small>preview of simple tables</small>
      </h1>
      	<span class ="index-img"><%#= image_tag (@product.image[0] if @product.image.attached?) %></span>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Product details</a></li>
        <li class="active">Index</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Product details</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tbody><tr>
                  <th>ID</th>                
                  <th><%= t"admin.products.show.Color" %></th>
                  <th><%= t"admin.products.show.Size" %></th>
                  <th><%= t"admin.products.show.Price" %></th>
                  <th><%= t"admin.products.show.Update_date" %></th>
                  <th><%= t"admin.products.show.Create_date" %></th>
                  <th><%= t"admin.products.show.edit" %></th>
                </tr>

                <% @product_details.each do |product_detail| %>
                  <tr>
                    <th><%=product_detail.id%></th>
                    <th><%=product_detail.color%></th>
                    <th><%=product_detail.size %></th>
                    <th><%=product_detail.price%></th>
                    <td><%=product_detail.updated_at%></td>
                    <td><%=product_detail.created_at%></td>
                    <td><a href="<%=edit_admin_product_detail_path(product_detail.id)%>"><i class="fa fa-pencil"></i></a></td>
                  </tr>
                <% end %>


              </tbody></table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>